{
  "name": "pixel-game-maker",
  "version": "0.5.1",
  "private": true,
  "description": "Pixel Game Maker \u2014 portable, versioned updates, modules, assets.",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build:win": "electron-builder -w portable --x64"
  },
  "dependencies": {
    "adm-zip": "^0.5.16"
  },
  "devDependencies": {
    "electron": "^31.7.7",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.pixel.game.maker",
    "productName": "Pixel Game Maker",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "index.html",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "data",
        "to": "data",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": [
        "portable"
      ],
      "artifactName": "PixelGameMaker-Portable-${version}.exe"
    }
  }
}